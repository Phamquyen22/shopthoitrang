
@{
    ViewBag.Title = "acc_management";
    Layout = "~/Areas/admin/Views/Shared/layout_share.cshtml";
    var authCookie = Request.Cookies[FormsAuthentication.FormsCookieName];
    int id = -1;
    database db = new database();
    string username, userData;
    if (authCookie != null)
    {
        var authTicket = FormsAuthentication.Decrypt(authCookie.Value);
        username = authTicket.Name;
        userData = authTicket.UserData;
        id = int.Parse(username);
        var ten = db.User_info.Where(c => c.id_user == id).FirstOrDefault();
    }
    else
    {
        username = Session["id_user"] as string;
        int iduser = int.Parse(username);
        userData = db.Account.Where(c => c.id_user == iduser).Select(c => c.role).FirstOrDefault();
    }
}
@using shopthoitrang.Models;
@model List<Account>
<div class="main-content">
    <section class="section">
        <div class="section-header">

            <div class="breadcrumb bg-primary text-white-all">
                <div class="breadcrumb-item active"><a href="#">Dashboard</a></div>
                <div class="breadcrumb-item"><a href="#">Auth</a></div>
                <div class="breadcrumb-item">Account management</div>
            </div>
        </div>

        <div class="section-body">
            <h2 class="section-title">Quản lý tài khoản</h2>
            
            <div class="row">
                <div class="col-12">
                    <div class="card">
                       
                        <div class="card-body p-0">
                            @{ if (@ViewBag.error != null)
                                {
                                    <div class="alert alert-danger alert-dismissible show fade">
                                        <button class="close" data-dismiss="alert">
                                            <span>×</span>
                                        </button>
                                        @ViewBag.error
                                    </div>
                                };
                                if (ViewBag.thanhcong != null)
                                {
                                    <div class="alert alert-success alert-dismissible show fade">
                                        <button class="close" data-dismiss="alert">
                                            <span>×</span>
                                        </button>
                                        @ViewBag.thanhcong
                                    </div>
                                }

                            }
                            <div class="table-responsive">
                                <table class="table table-striped" id="sortable-table">
                                    <thead>
                                        <tr>
                                            <th class="text-center">
                                                #
                                            </th>
                                            <th>Ảnh người dùng</th>
                                            <th>Tên người dùng</th>
                                            <th>Địa chỉ</th>
                                            <th>Số điện thoại</th>
                                            <th>Email</th>
                                            <th>Hạng người dùng</th>
                                            <th>Status</th>
                                            <th>Quyền người dùng</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            foreach (var u in Model)
                                            {
                                                var acc = db.User_info.Where(c => c.id_user == u.id_user).FirstOrDefault();
                                                <tr>

                                                    <td>@u.id_user</td>
                                                    <td>
                                                        <img alt="image" src="~/public/img/user/@acc.img" width="60" data-toggle="tooltip" title="@acc.name">
                                                    </td>

                                                    <td>@acc.name</td>
                                                    <td>@acc.address</td>
                                                    <td>@acc.phone</td>
                                                    <td>@acc.email</td>
                                                    <td>@acc.rank_user</td>

                                                    <td>
                                                        @{ if (u.acc_lock == "false")
                                                            {
                                                                <div class="badge badge-danger">
                                                                    @u.acc_lock
                                                                </div>
                                                            }
                                                            else
                                                            {
                                                                <div class="badge badge-success">
                                                                    @u.acc_lock
                                                                </div>
                                                            }
                                                        }
                                                    </td>
                                                    <td>@u.role</td>
                                                    <td>
                                                        <button class="btn btn-primary" onclick="editCategory('@u.taikhoan','@u.matkhau','@acc.name','@acc.address','@acc.phone','@acc.email','@acc.birthday','@u.acc_lock','@u.role','@acc.rank_user')" data-toggle="modal" data-target="#exampleModal">Sửa</button>| <a href="@Url.Action("del_account", "admin", new { taikhoan = u.taikhoan })" class="btn btn-danger" style="color:white">xóa</a>
                                                    </td>


                                                </tr>
                                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script>

        function editCategory(tk,mk,name, address, phone, email, ngaysinh, _lock, role,rank) {
            document.getElementById('taikhoan').value = tk;
            document.getElementById('matkhau').value = mk;
            document.getElementById('name').value = name;
            document.getElementById('address').value = address;
            document.getElementById('phone').value = phone;
            document.getElementById('email').value = email;
            document.getElementById('ngaysinh').value = ngaysinh;
            var a= document.getElementById('acc_lock');
            var condition = true;
            if (condition) {
                var optionIndex = Array.from(a.options).findIndex(option => option.value === _lock);
                a.selectedIndex = optionIndex;
            }
            //document.getElementById('role').value = role;
            var kq = document.getElementById('role');
            var condition = true;
            if (condition) {
                var optionIndex = Array.from(kq.options).findIndex(option => option.value === role);
                kq.selectedIndex = optionIndex;
            }
            var rank_user = document.getElementById('rank');
            var condition = true;
            if (condition) {
                var optionIndex = Array.from(rank_user.options).findIndex(option => option.value === rank);
                rank_user.selectedIndex = optionIndex;
            }
        }

    </script>
    <div class="modal fade" tabindex="-1" role="dialog" id="exampleModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

                <form action="@Url.Action("acc_management", "admin")" method="post" enctype="multipart/form-data">

                    @Html.AntiForgeryToken()
                    <div class="modal-body">
                        <div class="form-group">
                            <label>Tài khoản</label>
                            <input type="text" class="form-control" id="taikhoan" name="taikhoan" value="" readonly>
                        </div>
                        <div class="form-group">
                            <label>Mật khẩu</label>
                            <input type="text" class="form-control" id="matkhau" name="matkhau" value="">
                        </div>
                        <div class="form-group">
                            <label>Tên người dùng</label>
                            <input type="text" class="form-control" id="name" name="name" value="">
                        </div>
                        <div class="form-group">
                            <label>Địa chỉ người dùng</label>
                            <input type="text" class="form-control" id="address" name="address" value="">
                        </div>
                        <div class="form-group">
                            <label>Số điện thoại</label>
                            <input type="text" class="form-control" id="phone" name="phone" value="">
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" class="form-control" id="email" name="email" value="">
                        </div>
                        <div class="form-group">

                            <label>Ngày sinh</label>
                            <input type="date" class="form-control" id="ngaysinh" name="ngaysinh" value="">
                        </div>
                        <div class="form-group">

                            <label>Xếp hạng người dùng</label>
                            <select id="rank" name="rank" class="form-control ">
                                <option value="Đồng">Đồng</option>
                                <option value="Bạc">Bạc</option>
                                <option value="Vàng">Vàng</option>
                                <option value="Kim cương">Kim cương</option>
                                <option value="Untimate">Untimate</option>
                                
                            </select>

                        </div>
                        <div class="form-group">

                            <label>Trạng thái tài khoản</label>
                            <select id="acc_lock" name="acc_lock" class="form-control ">
                                <option value="true">true</option>
                                <option value="false">false</option>
                            </select>
                        </div>
                        <div class="form-group">

                            <label>Quyền quản trị</label>
                            <select id="role" name="role" class="form-control ">
                                <option value="user">user</option>
                                <option value="management">management</option>
                                @{
                                    if (userData == "admin")
                                    {
                                        <option value="admin">admin</option>
                                    }
                                }
                            </select>

                        </div>



                    </div>
                    <div class="modal-footer bg-whitesmoke br">

                        <button type="submit" class="btn btn-primary" aria-label="Close">Lưu</button>

                    </div>
                </form>


            </div>
        </div>
    </div>
</div>


@{
    ViewBag.Title = "login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
    <title>Login</title>

    <!-- General CSS Files -->
    <link rel="stylesheet" href="~/Areas/admin/assets/modules/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Areas/admin/assets/modules/fontawesome/css/all.min.css">

    <!-- CSS Libraries -->
    <link rel="stylesheet" href="~/Areas/admin/assets/modules/bootstrap-social/bootstrap-social.css">

    <!-- Template CSS -->
    <link rel="stylesheet" href="~/Areas/admin/assets/css/style.css">
    <link rel="stylesheet" href="~/Areas/admin/assets/css/components.css">
    <!-- Start GA -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-94034622-3"></script>
    <script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'UA-94034622-3');
    </script>
    <!-- /END GA -->
</head>

<body>
    <div id="app">
        <section class="section">
            <div class="container mt-5">
                <div class="row">
                    <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
                        <div class="login-brand">
                            <img src="~/Areas/Admin/assets/img/stisla-fill.svg" alt="logo" width="100" class="shadow-light rounded-circle">
                        </div>

                        <div class="card card-primary">
                            <div class="card-header"><h4>Login</h4></div>

                            <div class="card-body">
                                <form method="POST" action="@Url.Action("login", "admin")" class="needs-validation" novalidate="">
                                    <div class="form-group">
                                        @{ if (@ViewBag.error != null)
                                            {
                                                <div class="alert alert-danger">
                                                    @ViewBag.error
                                                </div>};
                                        }
                                        <label for="taikhoan">User name</label>
                                        <input id="taikhoan" type="text" class="form-control" name="taikhoan" tabindex="1" required autofocus>
                                        <div class="invalid-feedback">
                                            Please fill in your username
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="d-block">
                                            <label for="password" class="control-label">Password</label>

                                        </div>
                                        <input id="matkhau" type="password" class="form-control" name="matkhau" tabindex="2" required>
                                        <div class="invalid-feedback">
                                            please fill in your password
                                        </div>
                                    </div>



                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary btn-lg btn-block" tabindex="4">
                                            Login
                                        </button>
                                    </div>
                                </form>


                            </div>
                        </div>

                        <div class="simple-footer">
                            Copyright &copy; Stisla 2023
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- General JS Scripts -->
    <script src="~/Areas/admin/assets/modules/jquery.min.js"></script>
    <script src="~/Areas/admin/assets/modules/popper.js"></script>
    <script src="~/Areas/admin/assets/modules/tooltip.js"></script>
    <script src="~/Areas/admin/assets/modules/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Areas/admin/assets/modules/nicescroll/jquery.nicescroll.min.js"></script>
    <script src="~/Areas/admin/assets/modules/moment.min.js"></script>
    <script src="~/Areas/admin/assets/js/stisla.js"></script>

    <!-- JS Libraies -->
    <!-- Page Specific JS File -->
    <!-- Template JS File -->
    <script src="~/Areas/admin/assets/js/scripts.js"></script>
    <script src="~/Areas/admin/assets/js/custom.js"></script>
</body>
</html>


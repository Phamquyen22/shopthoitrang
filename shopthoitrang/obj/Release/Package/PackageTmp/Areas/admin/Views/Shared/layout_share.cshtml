
@{
    Layout = null;
    database db = new database();
    var order = db.Order.Where(c=>c.status_order=="Chờ xác nhận").ToList();
    var mes = db.Conversations.ToList();
}
@using shopthoitrang.Models;
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
    <title>@ViewBag.Title</title>

    <!-- General CSS Files -->
    <link rel="stylesheet" href="~/Areas/admin/assets/modules/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Areas/admin/assets/modules/fontawesome/css/all.min.css">

    <!-- CSS Libraries -->
    <link rel="stylesheet" href="~/Areas/admin/assets/modules/jqvmap/dist/jqvmap.min.css">
    <link rel="stylesheet" href="~/Areas/admin/assets/modules/summernote/summernote-bs4.css">
    <link rel="stylesheet" href="~/Areas/admin/assets/modules/owlcarousel2/dist/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Areas/admin/assets/modules/owlcarousel2/dist/assets/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/Areas/admin/assets/css/custom.css" />
    <!-- Template CSS -->
    <link rel="stylesheet" href="~/Areas/admin/assets/css/style.css">
    <link rel="stylesheet" href="~/Areas/admin/assets/css/components.css">
    <!-- Start GA -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-94034622-3"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-94034622-3');
    </script>
    <!-- /END GA -->
</head>

<body>
    <div id="app">
        <div class="main-wrapper main-wrapper-1">
            <div class="navbar-bg"></div>
            <nav class="navbar navbar-expand-lg main-navbar">
                <form class="form-inline mr-auto">
                    <ul class="navbar-nav mr-3">
                        <li><a href="#" data-toggle="sidebar" class="nav-link nav-link-lg"><i class="fas fa-bars"></i></a></li>
                        <li><a href="#" data-toggle="search" class="nav-link nav-link-lg d-sm-none"><i class="fas fa-search"></i></a></li>
                    </ul>

                </form>
                <ul class="navbar-nav navbar-right">
                    <li class="dropdown dropdown-list-toggle">
                        <a href="#" data-toggle="dropdown" class="nav-link nav-link-lg message-toggle beep"><i class="far fa-envelope"></i></a>
                        
                        <div class="dropdown-menu dropdown-list dropdown-menu-right">
                            <div class="dropdown-header">
                                Messages
                                <div class="float-right">
                                    <a href="javascript:void(0)" onclick="markall('@Url.Action("markall","admin")')">Mark All As Read</a>
                                </div>
                            </div>
                            <div class="dropdown-list-content dropdown-list-message" id="chat">
                                @{

                                    foreach (var item in mes)
                                    {
                                        var data = db.Messages.Where(c => c.ConversationID == item.ConversationID && c.status == "no").ToList();
                                        foreach (var message in data)
                                        {
                                            <a href="@Url.Action("Contact","Contact")" class="dropdown-item dropdown-item-unread">
                                                <div class="dropdown-item-avatar">
                                                    <img alt="image" src="~/public/img/user/@(db.User_info.Where(c => c.id_user == item.UserID1).Select(c=>c.img).FirstOrDefault())" class="rounded-circle">

                                                </div>
                                                <div class="dropdown-item-desc">
                                                    <b>@(db.User_info.Where(c => c.id_user == item.UserID1).Select(c => c.name).FirstOrDefault())</b>
                                                    <p>@message.message</p>
                                                    <div class="time">@message.Timestamp</div>
                                                </div>
                                            </a>
                                        }
                                    }

                                }


                            </div>
                            <div class="dropdown-footer text-center">
                                <a href="#">View All <i class="fas fa-chevron-right"></i></a>
                            </div>
                        </div>
                    </li>
                    <li class="dropdown dropdown-list-toggle">
                        <a href="#" data-toggle="dropdown" class="nav-link notification-toggle nav-link-lg beep"><i class="far fa-bell"></i></a>
                        <div class="dropdown-menu dropdown-list dropdown-menu-right">
                            <div class="dropdown-header">
                                Notifications

                            </div>
                            <div class="dropdown-list-content dropdown-list-icons">
                                @{
                                    foreach (var item in order)
                                    {
                                        <a href="javacript:void(0)" class="dropdown-item dropdown-item-unread">
                                            <div class="dropdown-item-icon bg-primary text-white">
                                                <i class="fas fa-shopping-bag"></i>
                                            </div>
                                            <div class="dropdown-item-desc">
                                                New Order by @(db.User_info.Where(c => c.id_user == item.id_user).Select(c => c.name).FirstOrDefault())
                                                <div class="time text-primary">@item.date_order</div>
                                            </div>
                                        </a>
                                    }
                                }


                            </div>
                        </div>
                    </li>
                    <li class="dropdown">
                        <a href="#" data-toggle="dropdown" class="nav-link dropdown-toggle nav-link-lg nav-link-user">
                            @{

                                var authCookie = Request.Cookies[FormsAuthentication.FormsCookieName];

                                if (authCookie != null)
                                {
                                    var authTicket = FormsAuthentication.Decrypt(authCookie.Value);
                                    string username = authTicket.Name;
                                    string userData = authTicket.UserData;
                                    int id = int.Parse(username);
                                    var ten = db.User_info.Where(c => c.id_user == id).FirstOrDefault();
                                    if (ten != null)
                                    {
                                        <img alt="image" src="~/public/img/user/@ten.img" class="rounded-circle mr-2" style="width:50px; height:50px">

                                        <div class="d-sm-none d-lg-inline-block">Hi, @ten.name </div>
                                    }
                                    else
                                    {

                                        <div class="d-sm-none d-lg-inline-block">Hi, Error </div>
                                    }
                                }
                                else
                                {

                                    <div class="d-sm-none d-lg-inline-block">Hi, Error </div>
                                }

                            }
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">


                            <div class="dropdown-divider"></div>
                            <a href="@Url.Action("login","admin")" class="dropdown-item has-icon text-danger">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                        </div>
                    </li>
                </ul>
            </nav>
            <div class="main-sidebar sidebar-style-2">
                <aside id="sidebar-wrapper">
                    <div class="sidebar-brand">
                        <a href="/Admin/admin/index">Admin</a>
                    </div>
                    <div class="sidebar-brand sidebar-brand-sm">
                        <a href="/Admin/admin/index">AD</a>
                    </div>
                    <ul class="sidebar-menu">
                        <li class="menu-header">Thống Kê</li>
                        <li class="dropdown" id="Index">
                            <a href="#" class="nav-link has-dropdown"><i class="fas fa-fire"></i><span>Dashboard</span></a>
                            <ul class="dropdown-menu">

                                <li><a class="nav-link" href="/Admin/admin/index">Thống kê</a></li>
                            </ul>
                        </li>
                        <li class="menu-header">product</li>
                        <li class="dropdown" id="product">
                            <a href="#" class="nav-link has-dropdown" data-toggle="dropdown"><i class="fas fa-passport"></i> <span>Products</span></a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link" href="@Url.Action("Category","Products")">Categories</a></li>
                                <li><a class="nav-link" href="@Url.Action("ProductType","Products")">product type</a></li>

                                <li><a class="nav-link" href="@Url.Action("Producer","Products")">Producers</a></li>
                                <li id="product"><a class="nav-link" href="@Url.Action("product","Products")">Products</a></li>
                            </ul>
                        </li>
                        <li class="dropdown " id="Discount">
                            <a href="#" class="nav-link has-dropdown" data-toggle="dropdown"><i class="fas fa-passport"></i> <span>Discount code</span></a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link" href="@Url.Action("Discount","DiscountCode")">Discount</a></li>

                            </ul>
                        </li>
                        <li class="menu-header">Order</li>
                        <li class="dropdown" id="donhang">
                            <a href="#" class="nav-link has-dropdown"><i class="fas fa-shopping-bag"></i> <span>Order</span></a>
                            <ul class="dropdown-menu">
                                <li id="donhang"><a class="nav-link" href="@Url.Action("donhang","Order")">Đơn hàng</a></li>
                                <li id="choxacnhan"><a class="nav-link" href="@Url.Action("choxacnhan","Order")">Đơn hàng chờ xác nhận</a></li>
                                <li id="vanchuyen"><a class="nav-link" href="@Url.Action("Delivery","Order")">Đơn hàng chờ vận chuyển</a></li>
                                <li><a class="nav-link" href="@Url.Action("Ordercompleted","Order")">Đơn hàng hoàn thành</a></li>
                            </ul>
                        </li>
                        <li class="menu-header">Contact</li>

                        <li class="dropdown">
                            <a href="#" id="Contact" class="nav-link has-dropdown"><i class="far fa-user"></i> <span>Contact</span></a>
                            <ul class="dropdown-menu">
                                <li><a href="@Url.Action("Contact","Contact")">Contact </a></li>
                            </ul>
                        </li>
                        <li class="menu-header">Account</li>

                        <li class="dropdown">
                            <a href="#" class="nav-link has-dropdown"><i class="far fa-user"></i> <span>Auth</span></a>
                            <ul class="dropdown-menu">

                                <li><a href="/Admin/admin/acc_management">Account management</a></li>
                                <li><a href="/Admin/admin/add_account">Add account </a></li>
                            </ul>
                        </li>
                    </ul>

                </aside>
            </div>
            @RenderBody()
            <footer class="main-footer">
                <div class="footer-left">
                    Copyright &copy; 2024 <div class="bullet"></div> Design By Quyen
                </div>
                <div class="footer-right">

                </div>
            </footer>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var tile = '@ViewBag.Title';
        var a = document.getElementById(tile);

        if (a) {
            a.classList.add("dropdown", "active");
        } else {
            console.error("Không tìm thấy thẻ có id: " + tile);
        }
        });

        setInterval(function () {

            var orderlistUrl = "/admin/admin/get_mes";
            $.ajax({
                url: orderlistUrl,
                method: 'GET',
                success: function (response) {
                    $('#chat').html(response);
                },
                error: function (xhr, status, error) {
                    // Xử lý lỗi
                    console.error(error);
                }
            });

        }, 4000);
        
    </script>
    <!-- General JS Scripts -->
    <script src="~/Areas/admin/assets/modules/jquery.min.js"></script>
    <script src="~/Areas/admin/assets/modules/popper.js"></script>
    <script src="~/Areas/admin/assets/modules/tooltip.js"></script>
    <script src="~/Areas/admin/assets/modules/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Areas/admin/assets/modules/nicescroll/jquery.nicescroll.min.js"></script>
    <script src="~/Areas/admin/assets/modules/moment.min.js"></script>
    <script src="~/Areas/admin/assets/js/stisla.js"></script>

    <!-- JS Libraies -->
    <script src="~/Areas/admin/assets/modules/jquery.sparkline.min.js"></script>
    <script src="~/Areas/admin/assets/modules/chart.min.js"></script>
    <script src="~/Areas/admin/assets/modules/owlcarousel2/dist/owl.carousel.min.js"></script>
    <script src="~/Areas/admin/assets/modules/summernote/summernote-bs4.js"></script>
    <script src="~/Areas/admin/assets/modules/chocolat/dist/js/jquery.chocolat.min.js"></script>

    <!-- Page Specific JS File -->
    <script src="~/Areas/admin/assets/js/page/index.js"></script>
    <script src="~/Areas/admin/assets/order.js"></script>
    <!-- Template JS File -->
    <script src="~/Areas/admin/assets/js/scripts.js"></script>
    <script src="~/Areas/admin/assets/js/custom.js"></script>
</body>
</html>
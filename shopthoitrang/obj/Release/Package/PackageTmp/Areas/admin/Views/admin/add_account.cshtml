
@{
    ViewBag.Title = "add_account";
    Layout = "~/Areas/admin/Views/Shared/layout_share.cshtml";
    var authCookie = Request.Cookies[FormsAuthentication.FormsCookieName];
    int id = -1;
    database db = new database();
    string username, userData;
    if (authCookie != null)
    {
        var authTicket = FormsAuthentication.Decrypt(authCookie.Value);
        username = authTicket.Name;
        userData = authTicket.UserData;
        id = int.Parse(username);
        var ten = db.User_info.Where(c => c.id_user == id).FirstOrDefault();
    }
    else
    {
        username = Session["id_user"] as string;
        int iduser = int.Parse(username);
        userData = db.Account.Where(c => c.id_user == iduser).Select(c => c.role).FirstOrDefault();
    }
}
@using shopthoitrang.Models
<!-- Main Content -->
<div class="main-content">
    <section class="section">
        <div class="section-header">
            <div class="breadcrumb bg-primary text-white-all">
                <div class="breadcrumb-item active"><a href="#">Dashboard</a></div>
                <div class="breadcrumb-item"><a href="#">Auth</a></div>
                <div class="breadcrumb-item">tạo tài khoản</div>
            </div>
        </div>

        <div class="section-body">
            <h2 class="section-title">Đăng ký tài khoản</h2>
            <p class="section-lead">Chúng tôi cần điền đầy đủ thông tin</p>

            <div class="row">
                <div class="col-12 col-md-6 col-lg-6">
                    <div class="card">
                        @{ if (@ViewBag.error != null)
                            {
                                <div class="alert alert-danger alert-dismissible show fade">
                                    <button class="close" data-dismiss="alert">
                                        <span>×</span>
                                    </button>
                                    @ViewBag.error
                                </div>
                            };
                            if (ViewBag.thanhcong != null)
                            {
                                <div class="alert alert-success alert-dismissible show fade">
                                    <button class="close" data-dismiss="alert">
                                        <span>×</span>
                                    </button>
                                    @ViewBag.thanhcong
                                </div>
                            }

                        }
                        <form action="@Url.Action("add_account", "admin")" method="post" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()
                            <div class="card-body">
                                <div class="form-group">
                                    <label>Tên đăng nhập</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="fas fa-user"></i>
                                            </div>
                                        </div>
                                        <input type="text" id="tk" name="tk" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Mật khẩu đăng nhập</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="fas fa-lock"></i>
                                            </div>
                                        </div>
                                        <input id="mk" name="mk" type="password" class="form-control pwstrength"
                                               data-indicator="pwindicator">
                                    </div>


                                </div>
                                <div class="form-group">
                                    <label>Loại người dùng</label>
                                    <select class="form-control selectric" id="role" name="role">

                                        <option value="user" selected>user</option>
                                        <option value="management">management</option>
                                        @{
                                            if (userData == "admin")
                                            {
                                                <option value="admin">admin</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Tên người dùng</label>
                                    <input id="username" name="username" type="text" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Số điện thoại</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="fas fa-phone"></i>
                                            </div>
                                        </div>
                                        <input id="phone" name="phone" type="text" class="form-control ">

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Địa chỉ nơi sống</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="fas fa-location-arrow"></i>
                                            </div>
                                        </div>
                                        <input id="address" name="address" type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">

                                    <label>Email</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="fas fa-mail-bulk"></i>
                                            </div>
                                        </div>
                                        <input name="email" id="email" type="email" class="form-control" required>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Ngày sinh</label>
                                    <input id="ngaysinh" name="ngaysinh" type="date" class="form-control datepicker">

                                </div>

                                <div class="form-group">
                                    <label>ảnh đại diện</label>
                                    <div class="col-sm-12 col-md-7">
                                        <div id="image-preview" class="image-preview">
                                            <label for="image-upload" id="image-label">Choose File</label>
                                            <input type="file" accept="image/*" name="file" id="file" />
                                        </div>
                                    </div>
                                </div>

                                <button class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>


                </div>

            </div>
        </div>
    </section>
</div>


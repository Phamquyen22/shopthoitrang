
@{
    ViewBag.Title = "Contact";
    Layout = "~/Areas/admin/Views/Shared/layout_share.cshtml";
    database db = new database();
    var listchat = db.Conversations.ToList();
}
@using shopthoitrang.Models
<script src="~/Areas/admin/assets/order.js"></script>
<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h1>Contact</h1>
            <div class="section-header-breadcrumb">
                <div class="breadcrumb-item active"><a href="#">Dashboard</a></div>
                <div class="breadcrumb-item"><a href="#">Contact</a></div>
                <div class="breadcrumb-item">Contact</div>
            </div>
        </div>

        <div class="section-body">
            
            <div class="row align-items-center justify-content-center">
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="card chat-box" style="height:600px;">
                        <div class="card-header">
                            <h4>Customer</h4>
                        </div>
                        <div class="card-body chat-content">
                            <ul class="list-unstyled list-unstyled-border scrollable-div">
                                @{
                                    foreach (var item in listchat)
                                    {
                                        var user = db.User_info.Where(c => c.id_user == item.UserID1).FirstOrDefault();
                                        <li class="media">
                                            <a href="javascript:void(0)" onclick="chat('@Url.Action("chat","Contact",new {id=item.ConversationID })')" class="btn" style="width:100%; float:left">
                                                <img alt="image" class="mr-3 float-left rounded-circle" width="50" style="object-fit:cover" height="50" src="~/public/img/user/@user.img">

                                                <div class="media-body float-left ">
                                                    <div class="mt-0 mb-1 font-weight-bold" style="color:black">@user.name</div>

                                                </div>
                                            </a>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>

                    </div>

                </div>
                <div class="col-12 col-sm-6 col-lg-4" >
                    <div class="card chat-box" style="height:600px;">

                        <div class="card-header">
                            <h4>Chat</h4>
                        </div>
                        <div class="card-body chat-content " id="mycontact">


                        </div>
                        <div class="card-footer chat-form">
                            
                                <input type="text" id="input_message" onkeypress="handleKeyDown(event)" class="form-control" placeholder="Type a message">
                                <button onclick="post_chat('@Url.Action("post_chat","Contact")')" class="btn btn-primary">
                                    <i class="far fa-paper-plane"></i>
                                </button>
                            
                        </div>

                    </div>

                </div>
        </div>
    </section>
</div>

<script>
     function handleKeyDown(event) {
                    if (event.key === 'Enter') {
                        post_chat('@Url.Action("post_chat","Contact")');
                    }
    }
     
</script>
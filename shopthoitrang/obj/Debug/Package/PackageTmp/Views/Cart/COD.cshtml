@using shopthoitrang.Models;
@model List<Order_detail>

<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Check Out</h4>
                    <div class="breadcrumb__links">
                        <a href="./index.html">Home</a>
                        <a href="./shop.html">Shop</a>
                        <span>Check Out</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            <div class="row">
                <div class="col-lg-4 col-md-6">
                    <div class="checkout__order">
                        <h4 class="checkout__order">@ViewBag.Message</h4>

                        <h4>@ViewBag.TxnRef</h4>
                        <h4>@ViewBag.VnpayTranNo</h4>
                        <hr />
                        <div class="checkout__order__products">Product <span>Total</span></div>
                        <ul class="checkout__total__products">
                            @{
                                int dem = 0;
                                int tongtien = 0;
                                foreach (var list in Model)
                                {
                                    var pro = db.product.Where(c => c.id_product == list.id_product).FirstOrDefault();
                                    dem++;
                                    var tien = (pro.price_pro - (pro.price_pro * pro.discount_pro / 100)) * list.quantity_pro;
                                    tongtien += tien ?? 0;
                                    string giatong = string.Format("{0:#,##0}₫", tien);
                                    <li>@dem. @pro.name_pro (x @list.quantity_pro) <span>@giatong</span></li>

                                }
                            }
                            <li>transport fee<span>16,000₫</span></li>
                        </ul>
                        <ul class="checkout__total__all">

                            <li>@ViewBag.Amount</li>

                        </ul>
                        <h5 class="checkout__order__products">@ViewBag.thank</h5>
                        <a href="@Url.Action("product", "Shop")" class="thanhtoan">
                            <div>
                                <span>
                                    <p>Thanks Order</p>
                                </span>
                            </div>
                            <div>
                                <span>
                                    <p>Continue Shopping</p>
                                </span>
                            </div>

                        </a>

                    </div>
                </div>


            </div>

        </div>
    </div>
</section>

@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
    database db = new database();
    var authCookie = Request.Cookies[FormsAuthentication.FormsCookieName];
    int id = -1;

    string username;
    if (authCookie != null)
    {
        var authTicket = FormsAuthentication.Decrypt(authCookie.Value);
        username = authTicket.Name;
        string userData = authTicket.UserData;
        id = int.Parse(username);
    }
    else
    {
        username = Session["id_user"] as string;
        id = int.Parse(username);
    }
    var ten = db.User_info.Where(i => i.id_user == id).FirstOrDefault();
}
@using shopthoitrang.Models;

<script src="~/public/js/custom.js" type="text/javascript"></script>
<div id="formContainer">
<div class="container mt-5">
    <div class="row">
        <div class="col-lg-4 pb-5">
            <!-- Account Sidebar-->
            <div class="author-card pb-3">
                <div class="author-card-cover" style="background-image: url(https://bootdey.com/img/Content/flores-amarillas-wallpaper.jpeg);">
                    <a class="btn" style="background-color:white" href="#" data-toggle="tooltip">
                        @ten.rank_user
                    </a>
                </div>
                <div class="author-card-profile">
                    <div class="author-card-avatar">
                        <a href="javascript:void(0)" onclick="show()">
                            <img src="~/public/img/user/@ten.img" alt="@ten.name">
                        </a>
                    </div>
                    <div class="author-card-details">
                        <h5 class="author-card-name text-lg">@ten.name</h5>
                    </div>
                </div>
            </div>
            <div class="wizard">
                <nav class="list-group">
                    <a class="list-group-item" style="color:black" href="@Url.Action("Profile","User")">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fe-icon-shopping-bag mr-1 text-muted"></i>
                                <div class="d-inline-block font-weight-medium text-uppercase">Profile settings</div>
                            </div>
                        </div>
                    </a>
                    <a class="list-group-item" style="color:black" onclick="orderlist('@Url.Action("Orderlist", "User")')">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fe-icon-shopping-bag mr-1 text-muted"></i>
                                <div class="d-inline-block font-weight-medium text-uppercase">Orders List</div>
                                @{ var cout_order = db.Order.Where(c => c.id_user == id).Count();}
                            </div><span class="badge badge-secondary">@cout_order</span>
                        </div>
                    </a>
                    <a class="list-group-item" style="color:black" onclick="favouritelist('@Url.Action("Favourite", "User")')">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fe-icon-shopping-bag mr-1 text-muted"></i>
                                <div class="d-inline-block font-weight-medium text-uppercase">favorites list</div>
                            </div>
                        </div>
                    </a>
                </nav>
            </div>
        </div>

        <!-- Profile Settings-->

        <div class="col-lg-8 pb-5" >
            <form id="update_acc" class="row" method="post" action="@Url.Action("update","User")">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="account-fn">Name</label>
                        <input class="form-control" type="number" name="id_user" value="@ten.id_user" required="" hidden>
                        <input class="form-control" type="text" name="name" value="@ten.name" required="">
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="account-email">E-mail</label>
                        <input class="form-control" type="email" name="email" value="@ten.email">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="account-phone">Phone Number</label>
                        <input class="form-control" type="text" name="phone" value="@ten.phone" required="">
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="account-fn">Address</label>
                        <input class="form-control" type="text" name="address" value="@ten.address" required="">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="account-fn">Birth Day</label>
                        <input class="form-control" type="date" name="birthday" value="@ten.birthday" required="">
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label for="account-pass">Old Password</label>
                        <input class="form-control" name="oldpass" type="password" placeholder="Old Password">

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="account-pass">New Password</label>
                        <input id="password-field" class="form-control" name="newpass" type="password" placeholder="New Password">

                    </div>
                </div>
                <div class="col-md-6">

                    <div class="form-group">

                        <label for="account-confirm-pass">Confirm Password</label>
                        <input class="form-control" name="confirmpass" type="password" placeholder="Confirm Password">

                    </div>
                </div>
                <div class="col-12">
                    <hr class="mt-2 mb-3">
                    <div class="d-flex flex-wrap justify-content-between align-items-center">

                        <button class="btn btn-style-1 btn-primary" type="button" onclick="update_acc('@Url.Action("update", "User")')" data-toast="" data-toast-position="topRight" data-toast-type="success" data-toast-icon="fe-icon-check-circle" data-toast-title="Success!" data-toast-message="Your profile updated successfuly.">Update Profile</button>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>

<div class="upfile" style="display:none" id="upfile">
    <form action="@Url.Action("file","User")" enctype="multipart/form-data" method="post">
       
            <a class="btn" onclick="show()" >
                <i class="fa fa-close"></i>
            </a>
       
        <label for="file" class="custum-file-upload">
